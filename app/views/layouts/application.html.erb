<!DOCTYPE html>
<html>
  <head>
    <title>PerfectPlaylist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>

    <div class="header" style="text-align:center;margin:auto;color:#f3f3f3;font-size:30px;font-weight:550;padding-top:105px;">
      <h1>PerfectPlaylist</h1>
    </div>

    <div class="nav">
        <a href="/playlists">Playlists</a>
        <a href="/songs">Songs</a>
        <a href="/artists">Artists</a>
        <% unless current_user %>
          <a href="#" style="float:right"><%= link_to 'Register', new_user_path %></a>
          <a href="#" style="float:right"><%= link_to 'I already have an account', login_path %></a>
        <% else %>
          <a href="#" style="float:right"><%= link_to 'Log Out', logout_path %></a>
        <% end %>
    </div>


    <%= yield %>
  </body>
</html>
